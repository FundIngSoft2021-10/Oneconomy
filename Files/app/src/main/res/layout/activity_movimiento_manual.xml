<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="src.Controler.MovimientoManual">

    <Button
        android:id="@+id/boton_crearcuenta2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#03A9F4"
        android:onClick="crearCuenta"
        android:text="Crear Cuenta"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/crearctxt4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="Valor:"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/checkIngreso"
        app:layout_constraintStart_toStartOf="@+id/checkBox3"
        app:layout_constraintTop_toBottomOf="@+id/checkIngreso"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/crearctxt3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="Método de pago:"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/crearctxt4"
        app:layout_constraintStart_toStartOf="@+id/crearctxt4"
        app:layout_constraintTop_toBottomOf="@+id/crearctxt4"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonFechaNacimiento2"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:background="#03A9F4"
        android:backgroundTint="#03A9F4"
        android:backgroundTintMode="add"
        android:onClick="showDatePickerDialog"
        android:text="Fecha"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox3"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/fecha_seleccionada2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:editable="false"
        android:ellipsize="start"
        android:ems="10"
        android:inputType="textPersonName"
        android:textIsSelectable="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonFechaNacimiento2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonFechaNacimiento2"
        app:layout_constraintTop_toTopOf="@+id/buttonFechaNacimiento2"
        app:layout_constraintVertical_bias="0.014" />

    <TextView
        android:id="@+id/crearctxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Entrada Manual"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/logo4"
        android:layout_width="182dp"
        android:layout_height="107dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/crearctxt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/crearctxt2"
        app:srcCompat="@drawable/imagen"
        tools:srcCompat="@drawable/imagen" />

    <CheckBox
        android:id="@+id/checkIngreso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingreso"
        app:layout_constraintStart_toEndOf="@+id/buttonFechaNacimiento2"
        tools:layout_editor_absoluteY="248dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Egreso"
        app:layout_constraintBottom_toBottomOf="@+id/checkIngreso"
        app:layout_constraintEnd_toEndOf="@+id/buttonFechaNacimiento2"
        app:layout_constraintTop_toTopOf="@+id/checkIngreso" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="615dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="558dp" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="214dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="571dp" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="214dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="104dp"
        app:layout_constraintBottom_toTopOf="@+id/boton_crearcuenta2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crearctxt5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/crearctxt5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:gravity="left"
        android:text="Descripción:"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName2"
        app:layout_constraintVertical_bias="0.523"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="260dp" />

    <Spinner
        android:id="@+id/Desplegable_Metodo_Pago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/crearctxt3"
        app:layout_constraintStart_toStartOf="@+id/crearctxt3"
        app:layout_constraintTop_toBottomOf="@+id/crearctxt3" />

</androidx.constraintlayout.widget.ConstraintLayout>