<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="src.Controler.MovimientoManual">

    <Button
        android:id="@+id/boton_crearcuenta2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#03A9F4"
        android:onClick="crearCuenta"
        android:text="Crear Cuenta"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="214dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintBottom_toTopOf="@+id/boton_crearcuenta2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crearctxt5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/crearctxt5"
        android:layout_width="210dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:gravity="left"
        android:text="Descripción:"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/crearctxt4"
        android:layout_width="135dp"
        android:layout_height="47dp"
        android:layout_marginEnd="16dp"
        android:gravity="left"
        android:text="Valor:"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="314dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/crearctxt3"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:gravity="left"
        android:text="Método de pago:"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/crearctxt4"
        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fecha_seleccionada2"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonFechaNacimiento2"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="213dp"
        android:layout_height="61dp"
        android:layout_marginTop="56dp"
        android:background="#03A9F4"
        android:backgroundTint="#03A9F4"
        android:backgroundTintMode="add"
        android:onClick="showDatePickerDialog"
        android:text="Fecha"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo4" />

    <EditText
        android:id="@+id/fecha_seleccionada2"
        android:layout_width="213dp"
        android:layout_height="54dp"
        android:layout_marginBottom="280dp"
        android:editable="false"
        android:ellipsize="start"
        android:ems="10"
        android:inputType="textPersonName"
        android:textIsSelectable="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFechaNacimiento2"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:id="@+id/crearctxt2"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:text="Entrada Manual"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/logo4"
        android:layout_width="227dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toTopOf="@+id/Nombre_usuario"
        app:layout_constraintEnd_toStartOf="@+id/crearctxt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen"
        tools:srcCompat="@drawable/imagen" />

    <CheckBox
        android:id="@+id/checkIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingreso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toEndOf="@+id/buttonFechaNacimiento2"
        tools:layout_editor_absoluteY="154dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Egreso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/buttonFechaNacimiento2"
        app:layout_constraintTop_toBottomOf="@+id/checkIngreso" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="370dp" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="214dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="370dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>