<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="src.Controler.MovimientoManual">

    <Button
        android:id="@+id/boton_Añadir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#03A9F4"
        android:onClick="crearCuenta"
        android:text="Añadir Entrada"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/crearctxt4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="Valor:"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkIngreso"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/crearctxt3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="Método de pago:"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/crearctxt4"
        app:layout_constraintStart_toStartOf="@+id/crearctxt4"
        app:layout_constraintTop_toBottomOf="@+id/crearctxt4"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonFechaNacimiento2"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:background="#03A9F4"
        android:backgroundTint="#03A9F4"
        android:backgroundTintMode="add"
        android:onClick="showDatePickerDialog"
        android:text="Fecha"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox3"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/fecha_seleccionada2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:editable="false"
        android:ellipsize="start"
        android:ems="10"
        android:inputType="textPersonName"
        android:textIsSelectable="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonFechaNacimiento2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonFechaNacimiento2"
        app:layout_constraintTop_toTopOf="@+id/buttonFechaNacimiento2"
        app:layout_constraintVertical_bias="0.014" />

    <TextView
        android:id="@+id/crearctxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Entrada Manual"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/logo4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo4"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/logo4"
        android:layout_width="182dp"
        android:layout_height="107dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen"
        tools:srcCompat="@drawable/imagen" />

    <CheckBox
        android:id="@+id/checkIngreso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingreso"
        app:layout_constraintStart_toEndOf="@+id/checkBox3"
        tools:layout_editor_absoluteY="227dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Egreso"
        app:layout_constraintBottom_toBottomOf="@+id/checkIngreso"
        app:layout_constraintTop_toTopOf="@+id/checkIngreso"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="171dp" />

    <EditText
        android:id="@+id/Descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="408dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Spinner
        android:id="@+id/Desplegable_Metodo_Pago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/crearctxt3"
        app:layout_constraintStart_toStartOf="@+id/crearctxt3"
        app:layout_constraintTop_toBottomOf="@+id/crearctxt3" />

</androidx.constraintlayout.widget.ConstraintLayout>